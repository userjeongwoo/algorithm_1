package Baekjoon;

import java.util.Scanner;

public class Test_15552 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		int[] arr=new int[T];
		int t=0;
		for (int i=0;i<T;i++) {
			int A;
			int B;
			A=sc.nextInt();
			B=sc.nextInt();
			arr[i]=A+B;
		}
		for (int i=0;i<T;i++) {
			System.out.println(arr[i]);
		}
//		System.out.println(arr);
	}

}
